{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="container">
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        <div class="form-group mb-2">
            {{ form_row(registrationForm.username, {'label' : 'Nom d\'utilisateur', 'attr' : { 'placeholder' : 'Renseignez un nom d\'utilisateur' }})}}
        </div>
        <div class="form-group mb-2">
            {{ form_row(registrationForm.email, {'label' : 'Votre email', 'attr' : { 'placeholder' : 'Renseignez un email' }  })}}
        </div>
        <div class="form-group mb-2">
            {{ form_row(registrationForm.password, {'label' : 'Votre mot de passe', 'attr' : { 'placeholder' : 'Renseignez un mot de passe' }  })}}
        </div>
        <div class="form-group mb-2">
            {{ form_row(registrationForm.confirmPassword, { 'label' : 'Confirmation du mot de passe', 'attr' : { 'placeholder' : 'Confirmez votre mot de passe' }  })}}
        <div>
        <div class="form-group my-2">
            {{ form_row(registrationForm.profilePicture, { 'label' : 'Confirmation du mot de passe'})}}
        </div>

        <button type="submit" class="btn btn-outline-primary my-2">S'inscrire</button>

    {{ form_end(registrationForm) }}
        <p>Déjà inscrit ? <a href={{ path('app_login')}}>Connectez-vous.</a></p>

    </div>
{% endblock %}
