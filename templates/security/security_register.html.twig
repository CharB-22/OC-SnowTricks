{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <h1>S'inscrire</h1>
    {{ form_start(registrationForm, {'attr': {'class':'' }}) }}
        {{ form_row(registrationForm.username, { 'label': 'Nom d\'utilisateur', 'attr' : { 'placeholder' : 'Renseignez un nom d\'utilisateur' }})}}
        {{ form_row(registrationForm.email, { 'label': 'Email', 'attr' : { 'placeholder' : 'Renseignez un email' }  })}}
        {{ form_row(registrationForm.password, { 'label': 'Mot de passe', 'attr' : { 'placeholder' : 'Renseignez un mot de passe' }  })}}
        {{ form_row(registrationForm.confirmPassword, { 'label': 'Confirmation du mot de passe', 'attr' : { 'placeholder' : 'Confirmez votre mot de passe' }  })}}
        {{ form_row(registrationForm.profilePicture, { 'label': 'Photo de profil' })}}
        <button class="btn btn-lg btn-primary mt-3" type="submit">
            S'inscrire
        </button>
    {{ form_end(registrationForm)}}
    <a href="{{ path('app_login')}}">Déjà inscrit ? Connectez-vous</a>

{% endblock %}