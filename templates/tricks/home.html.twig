{% extends 'base.html.twig' %}

{% block title %} {{ title }}{% endblock %}

{% block body %}
    <div class="" style="background-image: url('https://cdn.pixabay.com/photo/2015/03/26/10/01/man-690779_1280.jpg')">
    <h1>SnowTricks</h1>
    <h2>Le site communautaire pour les passionn√©s de Snowboard !</h2>
    </div>
    <div class="row">
        {% for trick in trickList %}
        <div class="col-lg-3 col-xs-12">
            <div class="card-body">
                <img class="card-img-top" src="https://tse2.mm.bing.net/th?id=OIP.Dxw8muUlY2lD2l-XxnSc9QHaEo&pid=Api"/>
                <div class="card-footer d-flex">
                    <a href="{{ path('trick_details',{'id': trick.id}) }}" >{{ trick.trickName }}</a>
                    <a href="{{ path('edit_trick',{'id': trick.id}) }}" class="btn"><i class="fas fa-edit"></i></a>
                    <form method="post" action="{{ path('delete_trick', {'id': trick.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
                        <button class="btn"><i class="fas fa-trash-alt"></i></button>
                    </form>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}
