{% extends 'base.html.twig' %}

{% block title %} {{ title }}{% endblock %}

{% block body %}
    <div class="carousel carousel-dark slide vh-70">
         <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://cdn.pixabay.com/photo/2017/02/22/15/29/snowboarders-2089706_960_720.jpg" class="d-block w-100" alt="Snowboarder dans la neige">
                <div class="carousel-caption d-none d-md-block">
                    <h1>SnowTricks</h1>
                    <h5>Le site communautaire pour les passionn√©s de Snowboard !</h5>
                    <i class="fas fa-arrow-circle-down fa-3x" style="color : #2196f3"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        {% for trick in trickList %}
        <div class="col-lg-3 col-xs-12">
            <div class="card-body">
                <img class="card-img-top" src="https://tse2.mm.bing.net/th?id=OIP.Dxw8muUlY2lD2l-XxnSc9QHaEo&pid=Api"/>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <a href="{{ path('trick_details',{'id': trick.id}) }}" >{{ trick.trickName }}</a>
                    {% if app.user %}
                    <div class="d-flex">
                        <a href="{{ path('edit_trick',{'id': trick.id}) }}" class="btn btn-link"><i class="fas fa-edit"></i></a>
                        <form method="post" action="{{ path('delete_trick', {'id': trick.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
                            <button class="btn btn-link"><i class="fas fa-trash-alt"></i></button>
                        </form>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}
