{% extends 'base.html.twig' %}

{% block title %}{{ trick.trickName }}{% endblock %}

{% block body %}

        <div class="text-center">
            {% if trick.trickImages | first %}

                <img
                    class="w-50 p-2"
                    src="{{ asset('/uploads/' ~  trick.trickImages | first .mediaName ) }}"
                    alt="{{ trick.trickName }} Image"
                />
            {% endif %}
        </div>
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner d-flex align-items-center">
                <div class="carousel-item active d-flex   align-items-center">
                    {% for image in trick.trickImages %}
                        {% if not loop.first %}
                            <img
                                class="w-25 p-2"
                                src="{{ asset('/uploads/' ~ image.mediaName ) }}"
                                alt="{{ trick.trickName }} Image {{ image.id }}"
                            />
                        {% endif %}
                    {% endfor %}
                    {% for video in trick.trickVideos %}
                            <iframe 
                                class="embed-responsive-item" 
                                src="{{ video.videoUrl }}">
                            </iframe> 
                    {% endfor %}
                </div>
                <button class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </button>
                <button class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </button>
            </div>
        </div>


    <div class="container">
        <h1> {{ trick.trickName }} </h1>
        <p>{{ trick.trickDescription }}</p>
        <div>
            <span class="badge bg-primary">Auteur : {{trick.user.username }}</span>
            <span class="badge bg-warning">Créé le : {{ trick.createdAt | date('d/m/Y') }}</span>
            <span class="badge bg-success">Modifié le : {{ trick.modifiedAt | date('d/m/Y') }}</span>
            <span class="badge bg-danger"> {{trick.trickGroup.groupName | default('Undefined')}} </span>
        </div>
    </div>
    <div class="container">
        {% if is_granted('ROLE_USER') %}
            {% include 'comment/createComment_form.html.twig' %}
        {% endif %}

        {# Pagination for comments #}
        <div class="d-flex justify-content-center">
            {% do comments.setPageRange(2) %}
            {{ knp_pagination_render(comments, 'comment/comment_pagination.html.twig')}}
        </div>

        {# Comments display - limit by 10 per page #}
        {% for comment in comments %}
        <div class="mb-3 d-flew card row">
            <div class="d-flex align-items-center">
                <div class="col-1">
                    <img  class="img-fluid d-flex justify-content-center" style="max-width: 50px;" src="{{ asset('/uploads/' ~ comment.user.profilePicture ) }}"  alt="image profile de {{comment.user.username}}"/>
                </div>
                <div class="col-10">
                    <h5 class="card-title"><p class="text-secondary">{{ comment.user.username }}</p></h5>
                    <p class="card-text"><small class="text-muted"><p class="text-secondary">Ecrit le : {{ comment.commentDate | date('d/m/Y')}}</p></small></p>
                    <p class="card-text">{{ comment.commentContent }}</p>
                </div>
                {% if is_granted('ROLE_ADMIN')%}
                <div col="col-1">
                    <form method="post" action="{{ path('delete_comment', {'id': comment.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                        <button class="btn"><i class="fas fa-trash-alt"></i></button>
                    </form>
                </div>
                {% endif %}
            </div>
        </div>
        {% endfor %} 
    </div>
{% endblock %}