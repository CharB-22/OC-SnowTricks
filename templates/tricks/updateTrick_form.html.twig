{% extends 'base.html.twig' %}
{% form_theme formTrick with 'bootstrap_4_layout.html.twig' %}

{% block title %}
    Modifier un trick
{% endblock %}

{% block body %}
    <h1>Modifier le trick {{ trick.trickName }}</h1>
    
    <div class="text-center">
        {% if trick.trickImages | first %}

            <img
                class="w-75 p-2"
                src="{{ asset('/uploads/' ~  trick.trickImages | first .mediaName ) }}"
                alt="{{ trick.trickName }} Image "
            />
            <form method="post" action="{{ path('delete_trickImage', {'id': trick.trickImages | first.id}) }}">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.trickImages | first.id) }}">
                <button class="btn btn-link"><i class="fas fa-trash-alt"></i></button>
            </form>
            <form method="post" action="{{ path('edit_trickImage', {'id': trick.trickImages | first.id}) }}">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.trickImages | first.id) }}">
                <button class="btn btn-link"><i class="fas fa-trash-alt"></i></button>
            </form>
            {#{% else %}
                <img
                    class="w-100 p-2"
                    src="https://tse2.mm.bing.net/th?id=OIP.Dxw8muUlY2lD2l-XxnSc9QHaEo&pid=Api"
                    alt="Ceci est un placeholder"
                />#}
            {% endif %}
    </div>
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner d-flex align-items-center">
                <div class="carousel-item active d-flex   align-items-center">
                    {% for image in trick.trickImages %}
                        {% if not loop.first %}
                            <img
                                class="w-25 p-2"
                                src="{{ asset('/uploads/' ~ image.mediaName ) }}"
                                alt="{{ trick.trickName }} Image {{ image.id }}"
                            />
                            <form method="post" action="{{ path('delete_trickImage', {'id': image.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
                                <button class="btn btn-link"><i class="fas fa-trash-alt"></i></button>
                            </form>    
                        {% endif %}
                    {% endfor %}
                    {% for video in trick.trickVideos %}
                            <iframe 
                                class="embed-responsive-item" 
                                src="{{ video.videoUrl }}">
                            </iframe>   
                    {% endfor %}
                </div>
                <button class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </button>
                <button class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </button>
        </div>
    </div>

    {{ form_start(formTrick) }}

        {{ form_row(formTrick.trickName, {'attr': {'placeholder': 'Renseignez le nom du trick'}})}}

        {{ form_row(formTrick.trickDescription, {'attr': {'placeholder': 'Renseignez la description du trick'}})}}
        
        {{ form_row(formTrick.trickGroup)}}
      
        <button type="submit" class="btn btn-primary m-3">Enregister les modifications</button>

    {{ form_end(formTrick, { render_rest : false })}}

    <form method="post" action="{{ path('delete_trick', {'id': trick.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
        <button class="btn btn-primary">Supprimer le trick</i></button>
    </form>    

{% endblock %}

